{
  "name": "jcrawler-frontend",
  "version": "1.0.0",
  "description": "JCrawler Electron Frontend",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder"
  },
  "keywords": ["crawler", "electron", "react"],
  "author": "JCrawler",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "axios": "^1.6.2",
    "sockjs-client": "^1.6.1",
    "@stomp/stompjs": "^7.0.0",
    "d3": "^7.8.5",
    "chart.js": "^4.4.0",
    "react-chartjs-2": "^5.2.0"
  },
  "build": {
    "appId": "com.jcrawler.app",
    "productName": "JCrawler",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "src/**/*",
      "public/**/*"
    ],
    "win": {
      "target": ["nsis"]
    }
  }
}
